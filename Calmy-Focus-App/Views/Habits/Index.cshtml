@model IEnumerable<Calmy_Focus_App.Models.Habit>
@{
    ViewData["Title"] = "Habit Tracker";
}

<style>
    .habit-tracker {
        max-width: 800px;
        margin: 0 auto;
    }

    .habit-header {
        text-align: center;
        margin-bottom: 2rem;
    }

    .current-date {
        font-size: 1.5rem;
        color: var(--text-primary);
        margin-bottom: 0.5rem;
    }

    .habit-card {
        background: var(--surface-light);
        border-radius: 8px;
        padding: 1.5rem;
        margin-bottom: 1.5rem;
        transition: transform 0.2s;
    }

        .habit-card:hover {
            transform: translateY(-2px);
        }

    .habit-content {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .habit-info {
        flex: 1;
    }

    .habit-name {
        font-size: 1.2rem;
        margin-bottom: 0.25rem;
    }

    .streak-counter {
        color: var(--primary);
        font-size: 0.9rem;
    }

    .toggle-switch {
        position: relative;
        width: 60px;
        height: 34px;
    }

    .toggle-input {
        opacity: 0;
        width: 0;
        height: 0;
    }

    .toggle-slider {
        position: absolute;
        cursor: pointer;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: #333;
        transition: .4s;
        border-radius: 34px;
    }

        .toggle-slider:before {
            position: absolute;
            content: "";
            height: 26px;
            width: 26px;
            left: 4px;
            bottom: 4px;
            background: var(--text-primary);
            transition: .4s;
            border-radius: 50%;
        }

    .toggle-input:checked + .toggle-slider {
        background: var(--primary);
    }

        .toggle-input:checked + .toggle-slider:before {
            transform: translateX(26px);
        }

    .delete-btn {
        color: #FF4444;
        margin-left: 1rem;
        cursor: pointer;
        transition: opacity 0.2s;
    }

        .delete-btn:hover {
            opacity: 0.8;
        }

    .form-control {
        color: white;
        background: #333;
        border: 1px solid #555;
    }

        .form-control::placeholder {
            color: #aaa;
        }
</style>

<div class="habit-tracker">
    <div class="habit-header">
        <div class="current-date">@DateTime.Today.ToString("dddd, MMMM dd")</div>
        <small class="text-muted">Build your habits one day at a time</small>
    </div>

    <form asp-controller="Habits" asp-action="Create" method="post" class="mb-4">
        <div class="input-group">
            <input type="text"
                   name="name"
                   class="form-control"
                   placeholder="New habit..."
                   required>
            <button type="submit" class="btn btn-primary">Add</button>
        </div>
    </form>

    @foreach (var habit in Model)
    {
        <div class="habit-card">
            <div class="habit-content">
                <div class="habit-info">
                    <div class="habit-name">@habit.Name</div>
                    <div class="streak-counter">
                        <i class="fas fa-fire"></i> @habit.Streak Day Streak
                    </div>
                </div>
                <div class="d-flex align-items-center">
                    <form asp-controller="Habits" asp-action="ToggleCheck" method="post">
                        <input type="hidden" name="id" value="@habit.Id" />
                        <label class="toggle-switch">
                            <input type="checkbox"
                                   class="toggle-input"
                            @(habit.History.Contains(DateTime.Today) ? "checked" : "")
                                   onchange="this.form.submit()">
                            <span class="toggle-slider"></span>
                        </label>
                    </form>
                    <form asp-controller="Habits" asp-action="Delete" method="post">
                        <input type="hidden" name="id" value="@habit.Id" />
                        <button type="submit" class="delete-btn">
                            <i class="fas fa-times"></i>
                        </button>
                    </form>
                </div>
            </div>
        </div>
    }
</div>