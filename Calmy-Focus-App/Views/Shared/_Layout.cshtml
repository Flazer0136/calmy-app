<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Calmy Focus</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="app-container">
        <nav class="sidebar">
            <div class="sidebar-header">
                <a href="/" class="logo">Calmy Focus</a>
            </div>
            <ul class="sidebar-nav">
                <li class="nav-item">
                    <a class="nav-link @(Context.Request.Path.StartsWithSegments("/Home") ? "active" : "")" href="/Home">
                        <i class="fas fa-sticky-note"></i>
                        <span>Notes</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(Context.Request.Path.StartsWithSegments("/Habits") ? "active" : "")" href="/Habits">
                        <i class="fas fa-check-circle"></i>
                        <span>Habits</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(Context.Request.Path.StartsWithSegments("/Calendar") ? "active" : "")" href="/Calendar">
                        <i class="fas fa-calendar"></i>
                        <span>Calendar</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(Context.Request.Path.StartsWithSegments("/Meditation") ? "active" : "")" href="/Meditation">
                        <i class="fas fa-spa"></i>
                        <span>Meditation</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(Context.Request.Path.StartsWithSegments("/Timer") ? "active" : "")" href="/Productivity/timer">
                        <i class="fas fa-clock"></i>
                        <span>Timer</span>
                    </a>
                </li>
            </ul>
            <div class="sidebar-footer">
                @if (User.Identity.IsAuthenticated)
                {
                    <form asp-controller="Account" asp-action="Logout" method="post">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-logout">
                            <i class="fas fa-sign-out-alt"></i>
                            <span>Logout</span>
                        </button>
                    </form>
                }
                else
                {
                    <a class="btn btn-login" href="/Account/Login">
                        <i class="fas fa-sign-in-alt"></i>
                        <span>Login</span>
                    </a>
                }
            </div>
        </nav>

        <main class="content-area">
            <div class="content-header">
                <h1 class="page-title">@ViewData["Title"]</h1>
            </div>
            <div class="content-body">
                @RenderBody()
            </div>
        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
